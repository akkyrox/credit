<!DOCTYPE html>
<html>
<head>
  <title>Credit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
    Signed in as <%= current_user.name %> | <%= link_to "Logout", session_path(session), method: :delete %>
<% else %>
    <%= link_to 'Login', '/sessions/new' %> | <%= link_to 'Signup', '/users/new' %>
<% end %>

<%= yield %>

</body>
</html>
